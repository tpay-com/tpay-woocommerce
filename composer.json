{
    "name": "tpay/woocommerce",
    "description": "Woocommerce payment module",
    "license": "MIT",
    "type": "woocommerce-module",
    "authors": [
        {
            "name": "tpay.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "tpay-com/tpay-openapi-php": "^2.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Tpay\\": "includes/"
        },
        "classmap": [
            "tpay.php",
            "vendor_prefixed/"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prepend-autoloader": false,
        "platform": {
          "php": "7.4.0"
        }
    },
    "scripts": {
        "cs:fix:dry": "php-cs-fixer fix --vvv --dry-run --diff",
        "cs:fix": "php-cs-fixer fix --diff",
        "cs:sniffer": "./vendor/bin/phpcs --standard=.phpcs.xml -n"
    },
    "require-dev": {
        "tpay-com/coding-standards": "^1.0.1",
        "php-cs-fixer/shim": "^3.23",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.16.2",
        "squizlabs/php_codesniffer": "*"
    }
}
